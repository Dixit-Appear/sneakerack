<div class="container">
  <div class="button-add">
    <%= link_to new_sneaker_path do %>
      <i class="fas fa-plus-circle add"></i>
    <% end %>
  </div>
  <div class="row">
    <div class="col">
          <div class="cards">
            <% @sneakers.each do |sneaker| %>
              <%= link_to sneaker_path(sneaker) do %>
                <div class="img-cards">
                  <%= cl_image_tag sneaker.photo, class: "img-show-sneaker", width: 500, height: 500 %>
                </div>
              <% end %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  ScrollReveal().reveal('.img-cards', { interval: 500, reset: true })
  // ScrollReveal().reveal('.img-show-sneaker', { deay: 1000 })
</script>
