<div class="main-form d-flex">
  <div class="image-login">
    <%= image_tag "poster.jpg", class: "image-signup1" %>
  </div>
  <div class="form-signup">
    <h2 class="text-center">Amend your sneaker</h2>
    <div class="back">
      <%= link_to "< Go Back", current_user, class: "backto" %>
    </div>
    <%= simple_form_for @sneaker do |f| %>
      <%= f.input :name, placeholder: "Sneaker Name..." %>
      <%= f.input :description, as: :text, placeholder: "Description Sneaker..." %>
      <%= f.input :brand, placeholder: "Nike, Jordan, Adidas..." %>
      <%= f.input :price_per_sneaker, placeholder: "Price Â£..." %>
      <%= f.input :size, placeholder: "Size in UK..." %>
      <%= f.input :link, placeholder: "StockX link..." %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <div class="form-actions-signup">
        <%= f.button :submit, "update sneaker", class: "btn btn-home" %>
      </div>
    <% end %>
  </div>
</div>
