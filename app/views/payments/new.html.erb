<div class="logo-payment d-flex justify-content-center w-100">
  <%= image_tag "logo-white.png", class: "dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
</div>
<div class="container">
  <div class="row justify-content-center text-center payment-item">
    <h2>Purchase of sneaker</h2>
    <p><%= current_user.email %></p>
    <h1><%= @order.snkshop_sku %></h1>
      <div class="form-payment">
        <%= form_tag order_payments_path(@order) do %>
          <article>
            <label class="amount">
              <span><%= humanized_money_with_symbol(@order.amount) %></span>
            </label>
          </article>
          <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-name="My Sneaker"
            data-email="<%= current_user.email %>"
            data-description="Sneaker <%= @order.snkshop_sku %>"
            data-amount="<%= @order.amount_cents %>"
            data-currency="<%= @order.amount.currency %>">
          </script>
        <% end %>
      </div>
      <p class= "back-top-shop">
        <%= link_to "ğŸ‘ˆ back to shop", snkshops_path, class: "back-shops" %>
      </p>
  </div>
</div>
