<div class="main-form d-flex">
  <div class="image-login">
    <%= image_tag "poster2.jpg", class: "image-login1" %>
  </div>
  <div class="form">
    <h2 class="text-center">Sign in.</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" }, placeholder: "" %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" }, placeholder: "" %>
                      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Sign in", class: "btn-home" %>
        </div>

      <% end %>
      <div class="signup d-flex justify-content-around">
        <p>don't have an account?  </p>
        <%= link_to "Sign up", new_registration_path(resource_name) %><br />
      </div>
  </div>
</div>


