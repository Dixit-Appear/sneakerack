<div class="container">
  <div class="row">
    <div class="col">
      <div class="col-12">
        <div class="d-flex show-content">
          <div class="d-flex justify-content-center img-show-div">
            <%= image_tag @shop.photo_url, class: "img-show" %>
          </div>
          <div class="description-stockx-shop text-center d-flex align-center justify-content-center">
            <h2><%= @shop.name%></h2>
            <p>"<%= @shop.description%>"</p>
            <p>UK <%= @shop.size%></p>
            <p><%= humanized_money_with_symbol(@shop.price) %></p>
            <%= form_tag orders_path do %>
             <%= hidden_field_tag 'snkshop_id', @shop.id %>
             <%= submit_tag 'Buy', class: 'btn btn-home' %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
